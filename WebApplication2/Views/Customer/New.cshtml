@model WebApplication2.ViewModel.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>
@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Watch)
        @Html.DropDownListFor(m => m.Customer.Watch,new SelectList(Model.Watched,"Id","Name"),"Select Wactch", new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Watching)
        @Html.DropDownListFor(m => m.Customer.Watching, new SelectList(Model.Watching, "Id", "Name"), "Select Watching", new { @class = "form-control" })

    </div>
    @Html.HiddenFor(m => m.Customer.Customer_Id)
    <button type="submit" class="btn btn-primary">Save</button>
    
}
}
}

