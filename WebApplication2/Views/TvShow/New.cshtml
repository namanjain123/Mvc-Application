@model WebApplication2.ViewModel.TvShowViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New TvShow</h2>
@using (Html.BeginForm("Create", "TvShow"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.TvShow.Name)
        @Html.TextBoxFor(m => m.TvShow.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TvShow.Duration)
        @Html.TextBoxFor(m => m.TvShow.Duration, new { @class = "form-control" })

    </div>
    
    @Html.HiddenFor(m => m.TvShow.Show_Id)
    <button type="submit" class="btn btn-primary">Save</button>

}
}
}
